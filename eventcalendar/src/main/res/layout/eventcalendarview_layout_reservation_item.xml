<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/event_time_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:id="@+id/event_start_end_time"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/event_startTime_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/add_day_text_color"
                android:textSize="12sp"
                android:text="@string/reservation_all_day_label" />

            <TextView
                android:id="@+id/event_endTime_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_startTime_label"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/reservation_all_day_label"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/event_allDay_label"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/reservation_all_day_label"
            android:textColor="@color/add_day_text_color"
            android:textSize="12sp" />
    </FrameLayout>

    <View
        android:id="@+id/event_divider"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/add_day_text_color" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:padding="8dp">

        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/add_day_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/event_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/event_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_title"
            android:paddingTop="5dp"
            android:textColor="@color/add_day_text_color"
            android:singleLine="true"
            android:textSize="10sp" />
    </RelativeLayout>
</LinearLayout>
